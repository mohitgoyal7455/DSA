class Solution {
public:
    vector<int> minBitwiseArray(vector<int>& nums) {
        vector<int> ans;

        for (int x : nums) {
            if ((x & 1) == 0) {
                ans.push_back(-1);
                continue;
            }

            int temp = x;
            int count = 0;

            while (temp & 1) {
                count++;
                temp >>= 1;
            }

            ans.push_back(x - (1 << (count - 1)));
        }

        return ans;
    }
};
